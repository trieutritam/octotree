{
  "name": "Octopanel",
  "version": "$VERSION",
  "description": "AGPL licensed",
  "homepage_url": "https://github.com/trieutritam/octopanel",
  "author": "Community",
  "manifest_version": 2,
  "minimum_chrome_version": "60",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": ["https://api.github.com/*", "storage"],
  "optional_permissions": [ "tabs", "http://*/" ],
  "web_accessible_resources": ["*.woff2", "*.png", "*.gif"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://github.com/*","http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
